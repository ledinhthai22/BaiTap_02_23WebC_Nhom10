<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">
                            @foreach (var p in Model)
                            {
                                <div class="single-product">
                                    <div class="product-f-image">
                                        <img src="~/img/@p.HinhAnh" alt="">
                                        <div class="product-hover">
                                            <a asp-controller="product" asp-action="cart" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                            <a href="#" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                        </div>
                                    </div>

                                    <h2><a href="#">@p.TenSp</a></h2>

                                    <div class="product-carousel-price">
                                        <ins>$@string.Format("{0:N2}", p.DonGia * (1 - p.DonGiaKhuyenMai))</ins>
                                        <del>$@string.Format("{0:N2}", p.DonGia)</del>
                                    </div>
                                </div>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->

