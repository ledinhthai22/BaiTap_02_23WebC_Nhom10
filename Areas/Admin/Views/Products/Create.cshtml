@model BaiTap_02_23WebC_Nhom10.Models.Product

@{
    Layout = "_Layout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Form Thêm Sản Phẩm</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-8">
                <form asp-area="Admin" asp-controller="Products" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <div class="form-group mb-3">
                        <label asp-for="TenSp" class="form-label font-weight-bold">Tên Sản Phẩm</label>
                        <input asp-for="TenSp" class="form-control" placeholder="Nhập tên sản phẩm (ví dụ: iPhone 15 Pro Max)" />
                        <span asp-validation-for="TenSp" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DonGia" class="form-label font-weight-bold">Đơn Giá (VNĐ)</label>
                                <input asp-for="DonGia" class="form-control" type="number" step="1000" min="0" placeholder="0" />
                                <span asp-validation-for="DonGia" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DonGiaKhuyenMai" class="form-label font-weight-bold">Khuyến Mãi (Phần trăm/Tỷ lệ)</label>
                                <input asp-for="DonGiaKhuyenMai" class="form-control" type="number" step="0.01" min="0" max="1" placeholder="0.00 (ví dụ: 0.1 cho 10%)" />
                                <span asp-validation-for="DonGiaKhuyenMai" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="LoaiSp" class="form-label font-weight-bold">Loại Sản Phẩm</label>
                                <input asp-for="LoaiSp" class="form-control" placeholder="Ví dụ: Iphone 15, Samsung" />
                                <span asp-validation-for="LoaiSp" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="HinhAnh" class="form-label font-weight-bold">Tên File Hình Ảnh</label>
                                <input asp-for="HinhAnh" class="form-control" placeholder="Ví dụ: product-7.jpg" />
                                <span asp-validation-for="HinhAnh" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="MoTa" class="form-label font-weight-bold">Mô Tả Sản Phẩm</label>
                        <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết sản phẩm..."></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-plus"></i>
                            </span>
                            <span class="text">Thêm Sản Phẩm</span>
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_js-admin");
    }
}